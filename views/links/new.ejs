<h4>New Link</h4>
<form action="/links" method="POST">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" placeholder="Enter title" required />
        </div>
        <div class="form-group col-md-12">
            <label for="url">Link</label>
            <input class="form-control" type="text" name="url" required />
        </div>
        <div class="form-group col-md-12">
            <label for="description">Description</label>
            <textarea maxlength="100" class="form-control" id="description" name="description" rows="3"></textarea>
        </div>          
    </div>                         
    <input type="submit" class="btn btn-primary btn-sm" value="Save">
    <a class="btn btn-secondary btn-sm" href="/links">Back</a>
<form>